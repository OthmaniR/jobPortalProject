<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recTitle"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="title"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recId"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="90dp"
            android:layout_toEndOf="@+id/recLocation"/>



        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/recLocation"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Location"
            android:layout_below="@+id/recTitle"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/recdate"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Date"
            android:textAlignment="center"
            android:layout_below="@+id/recId"
            android:layout_toEndOf="@+id/recTitle"
            android:layout_marginStart="90dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/recCategory"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Category"
            android:layout_below="@+id/recLocation"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/recDescription"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Description"
            android:textAlignment="center"
            android:layout_below="@+id/recdate"
            android:layout_toEndOf="@+id/recSkills"
            android:layout_marginStart="90dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/recSkills"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Skills"
            android:layout_below="@+id/recCategory"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/recExperience"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Experience"
            android:textAlignment="center"
            android:layout_below="@+id/recDescription"
            android:layout_toEndOf="@+id/recSkills"
            android:layout_marginStart="80dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>